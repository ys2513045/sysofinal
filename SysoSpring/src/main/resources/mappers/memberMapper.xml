<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itwillbs.memberMapper">




  <select id="getId" resultType="string">
      select member_id from member where member_nickname=#{member_nickname}
   </select>
   
   <select id="checkNickname" resultType="com.itwillbs.domain.MemberVO">
      select * from member where member_nickname=#{member_nickname}
   </select>
   
   <update id="updateNickname">
      update member set member_nickname=#{member_nickname} where member_id=#{member_id}
   </update>
   
   <select id="getNickname" resultType="string">
      select member_nickname from member where member_id=#{member_id}
   </select>
   
    <select id="transMemberid" resultType="java.lang.String">
     SELECT member_nickname FROM member WHERE member_id = #{member_id}
  </select>
  
  <insert id="insertShopId" parameterType="com.itwillbs.domain.MemberVO">
  insert into shop(member_id, shop_date) values(#{member_id},now())
  </insert>
  
  <select id="getMember" resultType="com.itwillbs.domain.MemberVO">
  select * from member where member_id = #{member_id}
  </select>
  
  <select id="checkEmaildup" resultType="com.itwillbs.domain.MemberVO">
  select * from member where member_email = #{member_email}
  </select>
  
    <select id="checkNicknamedup" resultType="com.itwillbs.domain.MemberVO">
  select * from member where member_nickname = #{member_nickname}
  </select>
  
  
  <update id="updatePassword" parameterType="com.itwillbs.domain.MemberVO">
  update member set member_password = #{member_password} where member_id = #{member_id}
  </update>

   </mapper>